@{
    ViewBag.Title = "PartsRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{Html.RenderPartial("_header");}

<div class="row">
    <div class="twelve columns">
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Error == true)
            {
                <p class="alert danger">@ViewBag.Message</p>
            }
            else
            {
                <p class="alert success">@ViewBag.Message</p>
            }
        }

    </div>
</div>
<div class="row">
    <div class="twelve columns">
        @using (Html.BeginForm("PartsUpload", "Staff", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <ul>
                <li>
                    <label for="file">Select file to upload: </label>
                </li>
                <li>
                    <input type="file" name="file" value="partsUpload" id="file" accept=".xlsx" class="medium primary btn"/>
                </li>
                <li><input type="submit" name="submit" value="Upload" class="medium secondary btn"/></li>
            </ul>
        }

    </div>
</div>

