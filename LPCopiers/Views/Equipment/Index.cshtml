@model IEnumerable<LPCopiers.Models.Equipment>

@{
    ViewBag.Title = "Index";
}

<header class="title">
    <div class="row">
        <div class="twelve columns">
            <h1>Equipment Record Details</h1>
        </div>
    </div>
</header>

<div class="row">
    <div class="twelve columns">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EngRef)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.serialNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EngRef)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.serialNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EquipmentID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EquipmentID })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
